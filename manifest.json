{
    "manifest_version": 3,
    "name": "Typoglycemia Text Transformer",
    "version": "1.0",
    "description": "Transforms all text on the page using the typoglycemia technique.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "typoglycemia.css"
            ]
        }
    ]
}
